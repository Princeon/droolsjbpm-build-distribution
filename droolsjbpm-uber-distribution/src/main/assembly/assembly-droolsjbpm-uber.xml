<?xml version="1.0" encoding="UTF-8"?>
<assembly xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2 http://maven.apache.org/xsd/assembly-1.1.2.xsd">

  <id>assembly-droolsjbpm-uber</id>
  <formats>
    <format>dir</format>
  </formats>

  <includeBaseDirectory>false</includeBaseDirectory>

  <fileSets>
    <fileSet>
      <directory>src/main/assembly/filtered-resources</directory>
      <filtered>true</filtered>
      <outputDirectory/>
    </fileSet>
  </fileSets>

  <dependencySets>
    <dependencySet>
      <includes>
        <include>org.drools:drools-distribution:zip</include>
        <include>org.optaplanner:optaplanner-distribution:zip</include>
        <include>org.drools:droolsjbpm-integration-distribution:zip</include>
        <include>org.kie.guvnor:guvnor-distribution:zip</include>
        <include>org.drools:droolsjbpm-tools-distribution:zip</include>
        <!-- No OSGi in Alpha7 <include>org.drools:drools-osgi-bundles-distribution:zip</include> -->
      </includes>
      <unpack>false</unpack>
      <outputDirectory>download_jboss_org/${project.version}</outputDirectory>
      <useStrictFiltering>true</useStrictFiltering>
    </dependencySet>
    <dependencySet>
      <includes>
        <include>org.drools:org.drools.updatesite:zip</include>
      </includes>
      <unpack>true</unpack>
      <outputDirectory>download_jboss_org/${project.version}/org.drools.updatesite</outputDirectory>
      <useStrictFiltering>true</useStrictFiltering>
    </dependencySet>

    <!-- Reference manual -->
    <dependencySet>
      <includes>
        <include>org.kie:droolsjbpm-introduction-docs:jdocbook</include>
      </includes>
      <outputDirectory>docs_jboss_org/${project.version}/droolsjbpm-introduction-docs</outputDirectory>
      <unpack>true</unpack>
      <unpackOptions>
        <excludes>
          <exclude>META-INF/**</exclude>
        </excludes>
      </unpackOptions>
      <useStrictFiltering>true</useStrictFiltering>
    </dependencySet>
    <dependencySet>
      <includes>
        <include>org.drools:drools-expert-docs:jdocbook</include>
      </includes>
      <outputDirectory>docs_jboss_org/${project.version}/drools-expert-docs</outputDirectory>
      <unpack>true</unpack>
      <unpackOptions>
        <excludes>
          <exclude>META-INF/**</exclude>
        </excludes>
      </unpackOptions>
      <useStrictFiltering>true</useStrictFiltering>
    </dependencySet>
    <dependencySet>
      <includes>
        <include>org.drools:drools-fusion-docs:jdocbook</include>
      </includes>
      <outputDirectory>docs_jboss_org/${project.version}/drools-fusion-docs</outputDirectory>
      <unpack>true</unpack>
      <unpackOptions>
        <excludes>
          <exclude>META-INF/**</exclude>
        </excludes>
      </unpackOptions>
      <useStrictFiltering>true</useStrictFiltering>
    </dependencySet>
    <dependencySet>
      <includes>
        <include>org.optaplanner:optaplanner-docs:jdocbook</include>
      </includes>
      <outputDirectory>docs_jboss_org/${project.version}/optaplanner-docs</outputDirectory>
      <unpack>true</unpack>
      <unpackOptions>
        <excludes>
          <exclude>META-INF/**</exclude>
        </excludes>
      </unpackOptions>
      <useStrictFiltering>true</useStrictFiltering>
    </dependencySet>
    <dependencySet>
      <includes>
        <include>org.drools:droolsjbpm-integration-docs:jdocbook</include>
      </includes>
      <outputDirectory>docs_jboss_org/${project.version}/droolsjbpm-integration-docs</outputDirectory>
      <unpack>true</unpack>
      <unpackOptions>
        <excludes>
          <exclude>META-INF/**</exclude>
        </excludes>
      </unpackOptions>
      <useStrictFiltering>true</useStrictFiltering>
    </dependencySet>
    <dependencySet>
      <includes>
        <include>org.kie.guvnor:guvnor-docs:jdocbook</include>
      </includes>
      <outputDirectory>docs_jboss_org/${project.version}/drools-guvnor-docs</outputDirectory>
      <unpack>true</unpack>
      <unpackOptions>
        <excludes>
          <exclude>META-INF/**</exclude>
        </excludes>
      </unpackOptions>
      <useStrictFiltering>true</useStrictFiltering>
    </dependencySet>

    <!-- Javadocs -->
    <dependencySet>
      <includes>
        <include>org.optaplanner:optaplanner-core:*:javadoc</include>
      </includes>
      <outputDirectory>docs_jboss_org/${project.version}/optaplanner-javadoc</outputDirectory>
      <unpack>true</unpack>
      <useStrictFiltering>true</useStrictFiltering>
    </dependencySet>
  </dependencySets>

</assembly>
