<?xml version="1.0" encoding="UTF-8"?>
<assembly xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2 http://maven.apache.org/xsd/assembly-1.1.2.xsd">

  <id>assembly-droolsjbpm-uber</id>
  <formats>
    <format>dir</format>
  </formats>

  <includeBaseDirectory>false</includeBaseDirectory>

  <dependencySets>
    <dependencySet>
      <includes>
        <include>org.drools:drools-distribution:zip</include>
        <include>org.drools.planner:drools-planner-distribution:zip</include>
        <include>org.drools:droolsjbpm-integration-distribution:zip</include>
        <include>org.drools:guvnor-distribution:zip</include>
      </includes>
      <unpack>false</unpack>
      <outputDirectory/>
      <useStrictFiltering>true</useStrictFiltering>
    </dependencySet>

    <!-- Reference manual -->
    <dependencySet>
      <includes>
        <include>org.drools:drools-introduction-docs:jdocbook</include>
      </includes>
      <outputDirectory>reference_manual/drools-introduction-docs</outputDirectory>
      <unpack>true</unpack>
      <unpackOptions>
        <excludes>
          <exclude>META-INF/**</exclude>
        </excludes>
      </unpackOptions>
      <useStrictFiltering>true</useStrictFiltering>
    </dependencySet>
    <dependencySet>
      <includes>
        <include>org.drools:drools-expert-docs:jdocbook</include>
      </includes>
      <outputDirectory>reference_manual/drools-expert-docs</outputDirectory>
      <unpack>true</unpack>
      <unpackOptions>
        <excludes>
          <exclude>META-INF/**</exclude>
        </excludes>
      </unpackOptions>
      <useStrictFiltering>true</useStrictFiltering>
    </dependencySet>
    <dependencySet>
      <includes>
        <include>org.drools:drools-fusion-docs:jdocbook</include>
      </includes>
      <outputDirectory>reference_manual/drools-fusion-docs</outputDirectory>
      <unpack>true</unpack>
      <unpackOptions>
        <excludes>
          <exclude>META-INF/**</exclude>
        </excludes>
      </unpackOptions>
      <useStrictFiltering>true</useStrictFiltering>
    </dependencySet>
    <dependencySet>
      <includes>
        <include>org.drools.planner:drools-planner-docs:jdocbook</include>
      </includes>
      <outputDirectory>reference_manual/drools-planner-docs</outputDirectory>
      <unpack>true</unpack>
      <unpackOptions>
        <excludes>
          <exclude>META-INF/**</exclude>
        </excludes>
      </unpackOptions>
      <useStrictFiltering>true</useStrictFiltering>
    </dependencySet>
    <dependencySet>
      <includes>
        <include>org.drools:droolsjbpm-integration-docs:jdocbook</include>
      </includes>
      <outputDirectory>reference_manual/droolsjbpm-integration-docs</outputDirectory>
      <unpack>true</unpack>
      <unpackOptions>
        <excludes>
          <exclude>META-INF/**</exclude>
        </excludes>
      </unpackOptions>
      <useStrictFiltering>true</useStrictFiltering>
    </dependencySet>
    <dependencySet>
      <includes>
        <include>org.drools:guvnor-docs:jdocbook</include>
      </includes>
      <outputDirectory>reference_manual/drools-guvnor-docs</outputDirectory>
      <unpack>true</unpack>
      <unpackOptions>
        <excludes>
          <exclude>META-INF/**</exclude>
        </excludes>
      </unpackOptions>
      <useStrictFiltering>true</useStrictFiltering>
    </dependencySet>
  </dependencySets>

</assembly>
