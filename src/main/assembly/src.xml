<?xml version="1.0" encoding="UTF-8"?>
<assembly xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2 http://maven.apache.org/xsd/assembly-1.1.2.xsd">

  <id>src</id>
  <formats>
    <format>zip</format>
  </formats>

  <includeBaseDirectory>false</includeBaseDirectory>

  <fileSets>
    <fileSet>
      <directory>.</directory>
      <outputDirectory></outputDirectory>
      <includes>
        <include>drools-ant/**</include>
        <include>knowledge-api/**</include>
        <include>drools-camel/**</include>
        <include>drools-clips/**</include>
        <include>drools-compiler/**</include>
        <include>drools-container/**</include>
        <include>drools-core/**</include>
        <include>drools-decisiontables/**</include>
        <include>drools-doc/**</include>
        <include>drools-docs/**</include>
        <include>drools-eclipse/**</include>
        <include>drools-examples/**</include>
        <include>drools-factconstraint/**</include>
        <include>drools-grid/**</include>
        <include>guvnor-webapp/**</include>
        <include>droolsjbpm-ide-common/**</include>
        <include>drools-jsr94/**</include>
        <include>drools-persistence-jpa/**</include>
        <include>drools-pipeline/**</include>
        <include>drools-planner/**</include>
        <include>guvnor-repository/**</include>
        <include>drools-rhq-plugin/**</include>
        <include>drools-server/**</include>
        <include>drools-simulator/**</include>
        <include>drools-templates/**</include>
        <include>drools-verifier/**</include>
        <include>*.xml</include>
        <include>*.txt</include>
      </includes>
      <excludes>
        <exclude>guvnor-webapp/repository/**</exclude>
        <exclude>guvnor-repository/repository/**</exclude>
        <exclude>drools-eclipse/org.drools.eclipse/lib/**</exclude>
        <exclude>drools-eclipse/org.drools.eclipse/help/**</exclude>
        <exclude>**/*.log/**</exclude>
        <exclude>**/target/**</exclude>
        <exclude>**/.svn/**</exclude>
        <exclude>**/.metadata/**</exclude>
      </excludes>
    </fileSet>
  </fileSets>
</assembly>
